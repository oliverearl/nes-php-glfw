{
    "name": "oliverearl/nes-emulator",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4",
        "ext-glfw": "*",
        "phpgl/visu": "@dev",
        "larapack/dd": "^1.1"
    },
    "require-dev": {
      "laravel/pint": "^1.25",
      "phpgl/ide-stubs": "dev-main",
      "roave/security-advisories": "dev-latest",
      "phpunit/phpunit": "^11.0",
      "phpstan/phpstan": "^2.1",
      "rector/rector": "^2.2"
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html=coverage",
        "phpstan": "php -d memory_limit=512M vendor/bin/phpstan analyse",
        "phpstan:baseline": "php -d memory_limit=512M vendor/bin/phpstan analyse --generate-baseline",
        "rector": "rector process --dry-run",
        "rector:fix": "rector process",
        "quality:check": [
            "@phpstan",
            "@rector"
        ],
        "post-root-package-install": [
            "php ./bin/install.php",
            "mkdir var/ && mkdir var/cache/ && chmod -R 777 var/"
        ],
        "post-autoload-dump": [
            "ClanCats\\Container\\ComposerContainerFileLoader::generateMap"
        ]
    }
}
